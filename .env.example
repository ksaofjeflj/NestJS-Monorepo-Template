

# Application Configuration
APP_NAME=NestJS Monorepo Template
NODE_ENV=development

API_PREFIX=api
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Database Configuration
# Supported: mongodb, postgresql, mysql
DB_TYPE=mongodb
DATABASE_URI=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d
# App-specific ports (recommended)
API_SERVER_PORT=3000
WEBSOCKET_PORT=3001
ADMIN_PORT=3002

# OR use global PORT with overrides
PORT=5001              # Default for all
API_SERVER_PORT=3000   # Override for api-server
ADMIN_PORT=3002   